//Formulae
formula sensor1SwitchCost = (mod(CSC,SENSOR1_MOD)>SENSOR1_MOD_RESULT) & (mod(PSC,SENSOR1_MOD)<=SENSOR1_MOD_RESULT) ? 10 : (mod(CSC,SENSOR1_MOD)<=SENSOR1_MOD_RESULT) & (mod(PSC,SENSOR1_MOD)>SENSOR1_MOD_RESULT) ? 2.0 : 0;
